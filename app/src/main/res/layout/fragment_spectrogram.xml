<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kylecorry.andromeda.views.toolbar.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        app:leftButtonIcon="@drawable/ic_info"
        app:subtitle="Subtitle"
        app:title="Test" />

    <com.kylecorry.andromeda.views.chart.Chart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <com.kylecorry.trail_sense_experiments.ui.SpectogramView
        android:id="@+id/spectogram"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>